<style>
	.about-hero {
		padding: calc(var(--spacing) * 12) 0;
		background: var(--bg-primary);
	}

	.about-content {
		display: grid;
		grid-template-columns: 300px 1fr;
		gap: calc(var(--spacing) * 8);
		align-items: center;
	}

	.about-image img {
		width: 100%;
		height: 300px;
		object-fit: cover;
		border-radius: 50%;
		border: 2px solid var(--primary);
		box-shadow: none;
	}

	.about-text h1 {
		font-size: 2.5rem;
		margin-bottom: calc(var(--spacing) * 4);
		color: var(--secondary);
		border-left: 4px solid var(--primary);
		padding-left: 0.5em;
		font-weight: 700;
	}

	.lead {
		font-size: 1.125rem;
		color: var(--text-secondary);
		line-height: 1.6;
	}

	.about-details {
		padding: calc(var(--spacing) * 12) 0;
	}

	.details-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
		gap: calc(var(--spacing) * 6);
		margin-bottom: calc(var(--spacing) * 12);
	}

	.detail-card {
		border: 2px solid var(--border);
		border-radius: 0;
		background: var(--bg-primary);
	}

	.detail-card h3 {
		color: var(--primary);
		margin-bottom: calc(var(--spacing) * 4);
		font-weight: 600;
		letter-spacing: 0.05em;
	}

	.interests-list {
		list-style: none;
		padding: 0;
	}

	.interests-list li {
		padding: calc(var(--spacing) * 2) 0;
		border-bottom: 1px solid var(--border-light);
		color: var(--text-secondary);
		transition: color 0.2s ease;
	}

	.interests-list li:last-child {
		border-bottom: none;
	}

	.interests-list li:hover {
		color: var(--primary);
	}

	.skills-grid {
		display: flex;
		flex-wrap: wrap;
		gap: calc(var(--spacing) * 2);
	}

	.skill-tag {
		background: var(--bg-primary);
		color: var(--primary);
		padding: calc(var(--spacing) * 1) calc(var(--spacing) * 3);
		border-radius: 0;
		font-size: 0.875rem;
		font-weight: 500;
		border: 2px solid var(--primary);
		transition: background 0.2s, color 0.2s;
	}
	.skill-tag:hover {
		background: var(--primary);
		color: var(--bg-primary);
	}

	.contradictions-list {
		display: flex;
		flex-direction: column;
		gap: calc(var(--spacing) * 4);
	}

	.contradiction-item {
		display: flex;
		gap: calc(var(--spacing) * 3);
		align-items: flex-start;
	}

	.contradiction-item .number {
		background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
		color: white;
		width: 32px;
		height: 32px;
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 0.875rem;
		font-weight: 600;
		flex-shrink: 0;
	}

	.contradiction-item p {
		margin: 0;
		line-height: 1.6;
	}

	.hobby-list, .tech-interests-list {
		list-style: none;
		padding: 0;
	}

	.hobby-list li, .tech-interests-list li {
		padding: calc(var(--spacing) * 2) 0;
		border-bottom: 1px solid var(--border-light);
		color: var(--text-secondary);
		line-height: 1.6;
	}

	.hobby-list li:last-child, .tech-interests-list li:last-child {
		border-bottom: none;
	}

	.cta-section {
		margin-top: calc(var(--spacing) * 8);
	}

	.cta-card {
		text-align: center;
		background: var(--bg-primary);
		border: 2px solid var(--primary);
		border-radius: 0;
	}

	.cta-card h2 {
		margin-bottom: calc(var(--spacing) * 4);
		color: var(--secondary);
	}

	.cta-card p {
		margin-bottom: calc(var(--spacing) * 6);
		font-size: 1.125rem;
	}

	.cta-actions {
		display: flex;
		gap: calc(var(--spacing) * 4);
		justify-content: center;
	}

	.cta-actions .btn {
		border-radius: 0;
	}

	@media (max-width: 768px) {
		.about-content {
			grid-template-columns: 1fr;
			text-align: center;
			gap: calc(var(--spacing) * 6);
		}

		.about-image img {
			width: 200px;
			height: 200px;
			margin: 0 auto;
		}

		.details-grid {
			grid-template-columns: 1fr;
		}

		.cta-actions {
			flex-direction: column;
			align-items: center;
		}
	}
</style>